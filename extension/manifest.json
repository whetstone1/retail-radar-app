{
  "manifest_version": 3,
  "name": "Retail Radar",
  "version": "2.1.0",
  "description": "Shop local, from home. Find local alternatives to Amazon products with better prices and faster delivery.",
  "permissions": [
    "activeTab",
    "storage",
    "geolocation"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://amazon.com/*",
    "http://localhost:3001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*", "https://amazon.com/*"],
      "js": ["content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
